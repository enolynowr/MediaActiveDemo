<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lgelectronics.mediaactivedemo.ConnectScreenActivity">

    <ImageView
        android:id="@+id/iv_dialling"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_dialling"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left|top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:minHeight="@dimen/demo_button_min_height"
            android:minWidth="@dimen/demo_button_min_width"
            android:text="@string/button_connect"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/colorPrimary"
            fbutton:shadowEnabled="true"
            android:layout_weight="1"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/btn_disconnect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_gravity="start|top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toStartOf="@+id/btn_connect"
            android:minHeight="@dimen/demo_button_min_height"
            android:minWidth="@dimen/demo_button_min_width"
            android:text="@string/button_disconnect"
            android:textColor="@android:color/white"
            fbutton:buttonColor="@color/fbutton_default_shadow_color"
            fbutton:shadowEnabled="true"
            android:layout_weight="1"/>

    </LinearLayout>


</LinearLayout>
